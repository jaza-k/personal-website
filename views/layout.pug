doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="author" content=author)
    //- normalize.css file to make browsers render all elements more consistently 
    link(rel="stylesheet" href="/public/stylesheets/normalize.min.css")
    //- font families
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Fira+Code&display=swap")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inconsolata&display=swap")
    //- website favicon
    link(rel="icon" href="/img/favicon.png")
    link(rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css")
    //- home CSS file
    link(rel="stylesheet" href="/stylesheets/home.min.css")
    block head
    title=title
    meta(name="description" content=description)
    
  body
    block content
      #particles-js
      .hidden-div
          .hidden-nav-links
              ul.nav-links
                  p#github-link 
                      a(target="_blank" rel="noreferrer" href="https://github.com/jaza-k") GitHub
                  p#resume-link 
                      a(href="#") Résumé
                  p#projects-link
                      a(href="/projects") Projects
                  p#contact-link
                      a(href="#" id="email-link" title="email-alert") Contact
      #burger
          .line-one
          .line-two
          .line-three

    block footer
      footer#footer
        a#footer-link(href='/')
          #footer-content
            img#footer-logo(src='/img/personal_logo.png', alt='personal logo')
    #bottom-background
    
    block scripts
      script(src="/lib/particles.min.js")
      script(src="/js/home.js")
      script
          | document.getElementById("email-link").addEventListener("click",function(){prompt("You can copy my e-mail address below: ","jaza-k@protonmail.com")});
      script
          | document.getElementById("burger").addEventListener("click",function(){const hiddenDiv = document.querySelector('.hidden-div');const nav = document.querySelector('.nav-links');const navLinks = document.querySelectorAll('.nav-links li');hiddenDiv.classList.toggle('toggle-hidden-div');nav.classList.toggle('nav-active');navLinks.forEach((link, index)=>{if(link.style.animation){link.style.animation='';}else{link.style.animation=`navLinkFade 0.5s ease forwards ${index / 7 + 0.3}s`;}}); burger.classList.toggle('toggle-menu');});
