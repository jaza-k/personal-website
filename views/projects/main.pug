extends ../layout

block head
  // CSS file for the projects page
  link(rel="stylesheet" href="/stylesheets/main.min.css")

append content
    #particles-js
    .hidden-div
        .hidden-nav-links
            ul.nav-links
                p#github-link 
                    a(target="_blank" rel="noreferrer" href="https://github.com/jaza-k") GitHub
                p#resume-link 
                    a(href="#") Résumé
                p#projects-link
                    a(href="/projects") Projects
                p#contact-link
                    a(href="#" id="email-link" title="email-alert") Contact
    #burger
        .line-one
        .line-two
        .line-three
    #terminal
        h1#prompt jazak
            span#symbol  &#8226;
            span#root  ~
            span#directory /Projects
            span#arrow » 
            span#cursor _

    #nav
        p#github-link 
            a(target="_blank" rel="noreferrer" href="https://github.com/jaza-k") GitHub
        span.space &nbsp;
        p#resume-link 
            a(href="#") Résumé
        span.space &nbsp;
        p#projects-link
            a(href="/projects") Projects
        span.space &nbsp;
        p#contact-link
            a(href="#" id="email-link" title="email-alert") Contact

    h3 Here are some of my most recent projects. To view more, visit my 
        span.git #[a(href="https://github.com/jaza-k" style="color:#6DDF6B;" target="_blank" rel="noreferrer") #[em GitHub]]
        span .

    #projects-box


block scripts
    script(src="/lib/particles.min.js")
    script(src="/js/home.js")
    script
        | document.getElementById("email-link").addEventListener("click",function(){prompt("You can copy my e-mail address below: ","jaza-k@protonmail.com")});
    script
        | document.getElementById("email-link").addEventListener("click",function(){prompt("You can copy my e-mail address below: ","jaza-k@protonmail.com")});
    script
        | document.getElementById("burger").addEventListener("click",function(){const hiddenDiv = document.querySelector('.hidden-div');const nav = document.querySelector('.nav-links');const navLinks = document.querySelectorAll('.nav-links li');hiddenDiv.classList.toggle('toggle-hidden-div');nav.classList.toggle('nav-active');navLinks.forEach((link, index)=>{if(link.style.animation){link.style.animation='';}else{link.style.animation=`navLinkFade 0.5s ease forwards ${index / 7 + 0.3}s`;}}); burger.classList.toggle('toggle-menu');});